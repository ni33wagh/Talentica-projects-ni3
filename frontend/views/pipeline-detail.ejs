<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pipeline - <%= pipelineName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/"><i class="fas fa-arrow-left me-2"></i>Back</a>
        <span class="navbar-text">Pipeline: <strong><%= pipelineName %></strong></span>
    </div>
</nav>
<div class="container py-4">
    <div class="row mb-3">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Success Rate</h5>
                    <p class="card-text fs-3"><%= (metrics && metrics.success_rate ? metrics.success_rate.toFixed(1) : '0.0') %>%</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Avg Build Time</h5>
                    <p class="card-text fs-3"><%= (metrics && metrics.avg_duration ? metrics.avg_duration.toFixed(1) : 0) %>s</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Builds</h5>
                    <p class="fs-3"><%= (metrics && metrics.total ? metrics.total : 0) %></p>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Recent Builds</h5>
            <a class="btn btn-outline-secondary btn-sm" href="/">Dashboard</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Status</th>
                            <th>Duration</th>
                            <th>When</th>
                            <th>Link</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% (builds || []).forEach(function(b){ %>
                                                        <tr>
                                                                <td><%= b.build_number || b.number %></td>
                                                                <td>
                                                                        <% const st = (b.status || b.result || 'UNKNOWN'); %>
                                                                        <span class="badge <%= st === 'SUCCESS' ? 'bg-success' : (st === 'FAILURE' ? 'bg-danger' : 'bg-secondary') %>"><%= st %></span>
                                                                </td>
                                                                <td><%= (b.duration ? (b.duration/60).toFixed(1)+'m' : '-') %></td>
                                                                <td><%= b.timestamp ? new Date(b.timestamp).toLocaleString() : '-' %></td>
                                                                <td>
                                                                        <% let jenkinsUrl;
                                                                             if (b.pipeline_name && b.build_number) {
                                                                                 jenkinsUrl = `http://localhost:4000/job/${b.pipeline_name}/${b.build_number}`;
                                                                             } else {
                                                                                 jenkinsUrl = 'http://localhost:4000/';
                                                                             }
                                                                        %>
                                                                        <a href="<%= jenkinsUrl %>" target="_blank" class="btn btn-sm btn-outline-primary">Open</a>
                                                                </td>
                                                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

